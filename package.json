{
  "name": "psqlvm",
  "version": "0.0.1-alpha",
  "description": "PostgreSQL version manager",
  "main": "./lib/cli.js",
  "author": "Patrick Christensen <patrick@pat.gg>",
  "license": "MIT",
  "bin": {
      "psqlvm": "./lib/cli.js"
  },
  "scripts": {
      "start": "npx nodemon --ext ts -w ./src/**/*.ts --exec 'npx tsc'",
      "build": "tsc -p .",
      "local": "yarn global install && psqlvm",
      "refresh": "rm -rf ./node_modules ./yarn.lock && yarn install"
  },
  "dependencies": {
    "arg": "^5.0.1",
    "chalk": "^4.1.2",
    "esm": "^3.2.25",
    "execa": "^5.1.1",
    "inquirer": "^8.2.0",
    "listr": "^0.14.3",
    "ncp": "^2.0.0",
    "pkg-install": "^1.0.0",
    "yargs": "^17.2.1"
  },
  "devDependencies": {
    "@types/node": "^16.11.6",
    "@types/yargs": "^17.0.5",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4"
  }
}
